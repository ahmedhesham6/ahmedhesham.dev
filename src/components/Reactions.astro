---
// Emoji reactions for blog posts. Uses SVG icons instead of emojis per UI/UX best practices.
// Data stored in localStorage â€” no backend needed.
// Backward compatible: data-emoji still stores original emoji characters as keys.
interface Props {
  slug: string;
}

const { slug } = Astro.props;

const reactions = [
  { emoji: '\u{1F525}', label: 'Fire' },
  { emoji: '\u{1F389}', label: 'Celebrate' },
  { emoji: '\u{1F4A1}', label: 'Insightful' },
  { emoji: '\u{2764}\u{FE0F}', label: 'Love' },
];
---

<div class="reactions-container flex items-center gap-3" data-slug={slug}>
  <span class="text-sm text-[var(--color-text-tertiary)]">React:</span>
  <div class="flex gap-2">
    {reactions.map((r) => (
      <button
        class="reaction-btn flex items-center justify-center border border-[var(--color-border)] bg-[var(--color-bg-secondary)] p-2.5 transition-all duration-200 hover:border-[var(--color-border-hover)] hover:text-[var(--color-accent-500)] focus-visible:ring-2 focus-visible:ring-accent-500 outline-none cursor-pointer"
        style="border-radius: var(--radius-full)"
        data-emoji={r.emoji}
        aria-label={`React with ${r.label}`}
        aria-pressed="false"
      >
        {r.label === 'Fire' && (
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z"/><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 5.99 5.99 0 0 0-1.925 3.547 5.975 5.975 0 0 1-2.133-1.001A3.75 3.75 0 0 0 12 18Z"/></svg>
        )}
        {r.label === 'Celebrate' && (
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"/></svg>
        )}
        {r.label === 'Insightful' && (
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18"/></svg>
        )}
        {r.label === 'Love' && (
          <svg class="size-[18px]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"/></svg>
        )}
      </button>
    ))}
  </div>
</div>

<script>
  function initReactions() {
    document.querySelectorAll('.reactions-container').forEach((container) => {
      const slug = (container as HTMLElement).dataset.slug;
      if (!slug) return;

      const storageKey = `reactions:${slug}`;
      const stored: string[] = JSON.parse(localStorage.getItem(storageKey) ?? '[]');

      container.querySelectorAll('.reaction-btn').forEach((btn) => {
        const emoji = (btn as HTMLElement).dataset.emoji!;
        const isActive = stored.includes(emoji);

        if (isActive) {
          btn.classList.add('reaction-active');
          btn.setAttribute('aria-pressed', 'true');
        }

        btn.addEventListener('click', () => {
          const current: string[] = JSON.parse(localStorage.getItem(storageKey) ?? '[]');
          const idx = current.indexOf(emoji);

          if (idx === -1) {
            current.push(emoji);
            btn.classList.add('reaction-active');
            btn.setAttribute('aria-pressed', 'true');
          } else {
            current.splice(idx, 1);
            btn.classList.remove('reaction-active');
            btn.setAttribute('aria-pressed', 'false');
          }

          localStorage.setItem(storageKey, JSON.stringify(current));
        });
      });
    });
  }

  initReactions();
  document.addEventListener('astro:after-swap', initReactions);
</script>
