---
import type { PinnedRepo } from '@lib/github';

interface Props {
  repos: PinnedRepo[];
}

const { repos } = Astro.props;
---

{repos.length > 0 && (
  <section class="mt-16">
    <h2 class="text-lg font-medium text-balance">Repositories</h2>
    <div class="mt-6 grid gap-4 sm:grid-cols-2">
      {repos.map((repo) => (
        <a
          href={repo.url}
          target="_blank"
          rel="noopener noreferrer"
          class="card-glow group flex flex-col gap-2 border border-[var(--color-border)] p-4 transition-all duration-200 hover:border-[var(--color-border-hover)] hover:-translate-y-0.5"
          style={`border-radius: var(--radius-lg)`}
        >
          <div class="flex items-center gap-2">
            <svg aria-hidden="true" class="size-4 shrink-0 text-[var(--color-text-tertiary)]" viewBox="0 0 16 16" fill="currentColor">
              <path d="M2 2.5A2.5 2.5 0 0 1 4.5 0h8.75a.75.75 0 0 1 .75.75v12.5a.75.75 0 0 1-.75.75h-2.5a.75.75 0 0 1 0-1.5h1.75v-2h-8a1 1 0 0 0-.714 1.7.75.75 0 1 1-1.072 1.05A2.495 2.495 0 0 1 2 11.5Zm10.5-1h-8a1 1 0 0 0-1 1v6.708A2.486 2.486 0 0 1 4.5 9h8ZM5 12.25a.25.25 0 0 1 .25-.25h3.5a.25.25 0 0 1 .25.25v3.25a.25.25 0 0 1-.4.2l-1.45-1.087a.249.249 0 0 0-.3 0L5.4 15.7a.25.25 0 0 1-.4-.2Z" />
            </svg>
            <span class="min-w-0 truncate font-medium group-hover:text-accent-500 transition-colors">
              {repo.name}
            </span>
            <span class="sr-only">(opens in new tab)</span>
          </div>
          {repo.description && (
            <p class="text-sm text-pretty text-[var(--color-text-secondary)] line-clamp-2">
              {repo.description}
            </p>
          )}
          <div class="mt-auto flex items-center gap-4 text-xs text-[var(--color-text-tertiary)]">
            {repo.language && (
              <span class="flex items-center gap-1.5">
                <span
                  class="inline-block size-3 rounded-full"
                  style={`background-color: ${repo.languageColor}`}
                  aria-hidden="true"
                />
                {repo.language}
              </span>
            )}
            {repo.stars > 0 && (
              <span class="flex items-center gap-1">
                <svg aria-hidden="true" class="size-4" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Z" />
                </svg>
                {repo.stars.toLocaleString()}
              </span>
            )}
            {repo.forks > 0 && (
              <span class="flex items-center gap-1">
                <svg aria-hidden="true" class="size-4" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75v-.878a2.25 2.25 0 1 1 1.5 0v.878a2.25 2.25 0 0 1-2.25 2.25h-1.5v2.128a2.251 2.251 0 1 1-1.5 0V8.5h-1.5A2.25 2.25 0 0 1 3.5 6.25v-.878a2.25 2.25 0 1 1 1.5 0ZM5 3.25a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Zm6.75.75a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm-3 8.75a.75.75 0 1 0-1.5 0 .75.75 0 0 0 1.5 0Z" />
                </svg>
                {repo.forks}
              </span>
            )}
          </div>
        </a>
      ))}
    </div>
    <a
      href="https://github.com/ahmedhesham6?tab=repositories"
      target="_blank"
      rel="noopener noreferrer"
      class="group mt-6 inline-flex items-center gap-1.5 text-sm text-[var(--color-text-secondary)] transition-colors duration-200 hover:text-[var(--color-text)]"
    >
      View all repositories
      <svg class="size-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
      </svg>
    </a>
  </section>
)}
