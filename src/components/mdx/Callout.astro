---
interface Props {
  type?: 'info' | 'warning' | 'error' | 'tip';
}

const { type = 'info' } = Astro.props;

const config = {
  info: {
    border: 'border-l-blue-500',
    bg: 'bg-blue-500/5',
    icon: `<svg class="size-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" /></svg>`,
  },
  tip: {
    border: 'border-l-green-500',
    bg: 'bg-green-500/5',
    icon: `<svg class="size-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18v-5.25m0 0a6.01 6.01 0 0 0 1.5-.189m-1.5.189a6.01 6.01 0 0 1-1.5-.189m3.75 7.478a12.06 12.06 0 0 1-4.5 0m3.75 2.383a14.406 14.406 0 0 1-3 0M14.25 18v-.192c0-.983.658-1.823 1.508-2.316a7.5 7.5 0 1 0-7.517 0c.85.493 1.509 1.333 1.509 2.316V18" /></svg>`,
  },
  warning: {
    border: 'border-l-yellow-500',
    bg: 'bg-yellow-500/5',
    icon: `<svg class="size-5 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" /></svg>`,
  },
  error: {
    border: 'border-l-red-500',
    bg: 'bg-red-500/5',
    icon: `<svg class="size-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>`,
  },
} as const;

const c = config[type];
---

<aside class={`my-6 border-l-4 ${c.border} ${c.bg} p-4`} style="border-radius: 0 var(--radius-md) var(--radius-md) 0">
  <div class="flex gap-3">
    <span class="shrink-0 pt-0.5" aria-hidden="true" set:html={c.icon} />
    <div class="prose prose-sm prose-neutral dark:prose-invert max-w-none">
      <slot />
    </div>
  </div>
</aside>
